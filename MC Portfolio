    }
    .dataframe tr:hover {
        background-color: #b8c0ff !important;  
    }
    .dataframe tr:hover td {
        color: #000000 !important; 
    }
</style>
"""

style_w = {'description_width': 'initial'}
layout_w = widgets.Layout(width='95%')

w_tickers = widgets.Text(value='SPY,TLT,GLD', placeholder='Ticker List', description='', layout=layout_w)
w_weights = widgets.Text(value='0.5, 0.3, 0.2', placeholder='Weights', description='', layout=layout_w)
w_start = widgets.DatePicker(value=dt.date.today() - dt.timedelta(days=730), description='', layout=layout_w)
w_init = widgets.IntText(value=100000, description='', layout=layout_w)
w_sims = widgets.IntSlider(value=5000, min=500, max=50000, step=500, description='', layout=layout_w)
w_T = widgets.IntSlider(value=252, min=20, max=504, step=1, description='', layout=layout_w)
w_rf = widgets.FloatText(value=0.04, step=0.0025, description='', layout=layout_w)
w_garch = widgets.Checkbox(value=True, description='GARCH(1,1)', indent=False)
w_student = widgets.Checkbox(value=True, description='t-Student', indent=False)
w_regime = widgets.Checkbox(value=False, description='Regime Switch', indent=False)
w_df = widgets.IntSlider(value=5, min=3, max=30, description='DoF', layout=widgets.Layout(width='150px'))
btn_run = widgets.Button(description='RUN SIMULATION', layout=widgets.Layout(width='100%', height='50px'), style=widgets.ButtonStyle(button_color='#cc9500'))
out_res = widgets.Output(layout=widgets.Layout(padding='10px'))

def format_stats_horizontal(stats):
    data = {'Performance': {'Mean Final': f"{stats['Mean']:,.0f}", 'Ann Return': f"{stats['Ann Ret %']:.2f}%", 'Loss Prob': f"{stats['Loss Prob %']:.1f}%"},
        'Risk Metrics': {'Vol (Ann)': f"{stats['Ann Vol %']:.2f}%", 'VaR 5%': f"{stats['VaR 5%']:,.0f}", 'CVaR 5%': f"{stats['CVaR 5%']:,.0f}", 'Max DD': f"{stats['MaxDD Mean %']:.2f}%"},
        'Ratios': {'Sharpe': f"{stats['Sharpe']:.2f}", 'Sortino': f"{stats['Sortino']:.2f}", 'Calmar': f"{stats['Calmar']:.2f}"}}

    html_str = "<div style='display: flex; gap: 20px; width: 100%; justify-content: space-around;'>"
    for cat in data:
        sub_df = pd.DataFrame(data[cat].items(), columns=['Metric', 'Value'])
        html_str += f"<div style='flex: 1;'><h4 style='color: #008080; border-bottom: 1px solid #444;'>{cat}</h4>"
        html_str += sub_df.to_html(index=False, classes='dataframe', border=0)
        html_str += "</div>"
    html_str += "</div>"
    return html_str

def on_click_run(b):
    out_res.clear_output()
    with out_res:
        tk = [x.strip().upper() for x in w_tickers.value.split(',') if x.strip()]
        try:
            wt = np.array([float(x) for x in w_weights.value.split(',')])
        except ValueError:
            display(HTML("<div style='color: red;'>ERROR: invalid weights format.</div>"))
            return

        if len(wt) != len(tk):
            display(HTML("<div style='color: red;'>ERROR: number of weights and tickers does not match.</div>"))
            return
        if abs(wt.sum() - 1.0) > 1e-6:
            display(HTML(f"<div style='color: red;'>ERROR: weights must sum to 1. Current sum = {wt.sum():.4f}</div>"))
            return

        display(HTML("<div style='color: #cc9500; font-family: monospace;'>[SYSTEM] PROCESSING SIMULATION...</div>"))

        try:
            res = run_mc_analysis(tk, wt, w_start.value, dt.date.today(), w_sims.value, w_T.value, w_init.value, w_rf.value, w_garch.value, w_student.value, w_df.value, w_regime.value)
            sims, finals, max_dd, conv, stats, stress, frontier, (mu, cov), reg_info = res
            display(HTML("<hr style='border-color: #333;'>"))
            display(HTML(format_stats_horizontal(stats)))
            display(HTML("<hr style='border-color: #333; margin-top: 20px; margin-bottom: 20px;'>"))
            df_stress = pd.DataFrame(stress).T[['ret', 'dd', 'final']]
            df_stress.columns = ['Return %', 'Max Drawdown %', 'Final Value']
            df_stress = pd.DataFrame(stress).T[['ret', 'dd', 'final']]
            df_stress.columns = ['Return %', 'Max Drawdown %', 'Final Value']

            stress_style = (df_stress.style.format({'Return %': '{:.2f}%', 'Max Drawdown %': '{:.2f}%', 'Final Value': '{:,.0f}'}).set_table_attributes('class=\"dataframe\"'))
            stress_html = stress_style.to_html()
            display(HTML("<h4 style='color: #ff3333;'>SCENARIO STRESS TEST ANALYSIS</h4>" + stress_html))
            missing_msgs = []
            for scen_name, res_s in stress.items():
                missing_tk = res_s.get("missing", [])
                if missing_tk:
                    missing_msgs.append((scen_name, missing_tk))

            if missing_msgs:
                msg_html = "<ul style='margin-top:5px; padding-left:18px;'>"
                for scen_name, missing_tk in missing_msgs:
                    msg_html += ("<li>"f"<strong>{scen_name}</strong>: ""IMPORTANT: analysis based on subset of assets; "f"no reliable data available for tickers {list(missing_tk)}""</li>")
                msg_html += "</ul>"

                display(HTML(
                    "<div style='margin-top:8px; padding:8px; "
                    "border:1px solid #cc9500; "
                    "background-color:#1e1e1e; "
                    "color:#cc9500; "
                    "font-family: 'Roboto Mono', monospace; "
                    "font-size:11px;'>"
                    "<span style='font-weight:bold;'>STRESS TEST DATA NOTICE</span>"
                    + msg_html +
                    "</div>"
                ))
            if reg_info is not None:
                display(HTML("<br><h4 style='color: #cc9500;'>REGIME SWITCHING DETAILS</h4>"))
                t_mat = pd.DataFrame(reg_info['transition'], columns=['To Low', 'To High'], index=['From Low', 'From High'])
                t_style = (t_mat.style.format("{:.2%}").set_table_attributes('class=\"dataframe\"'))
                display(HTML(t_style.to_html()))
            display(HTML("<br><h4 style='color: #008080;'>3D INTERACTIVE ANALYSIS</h4>"))
            fig3d = plots_3d(sims, finals)
            fig3d.show()
            display(HTML("<br><h4 style='color: #008080;'>STATIC VISUALIZATIONS</h4>"))
            plots_2d(sims, finals, max_dd, conv[0], conv[1], w_init.value, frontier, mu, cov, wt, tk)

        except Exception as e:
            display(HTML(f"<div style='color: red; font-weight: bold;'>ERROR: {str(e)}</div>"))

btn_run.on_click(on_click_run)

def lbl(text):
    return widgets.HTML(f"<div class='widget-label'>{text}</div>")

panel_assets = widgets.VBox([lbl("Assets (Comma sep)"), w_tickers, lbl("Weights (Comma sep)"), w_weights, lbl("Start Date"), w_start, lbl("Initial Capital"), w_init], layout=widgets.Layout(width='32%', border='1px solid #333', padding='10px', margin='0 5px 0 0'))
panel_sims = widgets.VBox([lbl("Num Simulations"), w_sims, lbl("Time Horizon (Days)"), w_T, lbl("Risk Free Rate"), w_rf], layout=widgets.Layout(width='32%', border='1px solid #333', padding='10px', margin='0 5px 0 5px'))
panel_model = widgets.VBox([lbl("Model Features"), w_garch, w_student, widgets.HBox([widgets.Label("Student DoF:"), w_df]), w_regime], layout=widgets.Layout(width='32%', border='1px solid #333', padding='10px', margin='0 0 0 5px'))

ui_body = widgets.HBox([panel_assets, panel_sims, panel_model], layout=widgets.Layout(width='100%', justify_content='space-between'))
dashboard = widgets.VBox([ui_body, widgets.HTML("<br>"), btn_run, out_res])

display(HTML(style_html))
display(HTML("""
<div class="quant-container">
    <div class="quant-header">
        <div class="quant-title">Monte Carlo Pro <span style="font-size: 14px; color: #008080;">v2.0</span></div>
        <div class="quant-subtitle">QUANTITATIVE DESK /// ANALYTICS</div>
    </div>
</div>
"""))
display(dashboard)
display(HTML("</div>"))
